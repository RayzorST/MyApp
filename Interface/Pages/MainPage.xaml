<Page x:Class="MyApp.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Background="{DynamicResource Color1}" HorizontalAlignment="Left" Width="112" CornerRadius="0, 0, 0, 10"/>
        <Frame x:Name="frame" Margin="112,0,1,1"/>
        <Button Background="{DynamicResource Color1}" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" BorderBrush="{x:Null}" Width="92" Height="30" BorderThickness="0,0,0,0" Content="Settings" Foreground="{DynamicResource ColorText}" FontWeight="Bold" Cursor="Hand" Click="Button_Click_Settings">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5, 5, 5,5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>
